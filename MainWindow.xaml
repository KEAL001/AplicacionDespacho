<Window x:Class="AplicacionDespacho.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicacionDespacho"
        xmlns:viewmodels="clr-namespace:AplicacionDespacho.ViewModels"
        mc:Ignorable="d"
        Title="Aplicación de Despacho" Height="800" Width="900"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="Escaneo de Pallets">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Número de Pallet:"/>
                        <TextBox x:Name="txtNumeroPallet" Width="200" Margin="5,0,10,0" Text="{Binding EntradaNumeroPallet, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button x:Name="btnEscanear" Content="Escanear" Command="{Binding ComandoEscanear}"/>
                    </StackPanel>

                    <GroupBox Header="Información del Último Pallet" Grid.Row="1" Margin="0,10">
                        <StackPanel DataContext="{Binding UltimoPalletEscaneado}">
                            <TextBlock Margin="5">
                                <Run Text="Pallet: " FontWeight="Bold"/>
                                <Run Text="{Binding NumeroPallet}"/>
                                <LineBreak/>
                                <Run Text="Variedad: " FontWeight="Bold"/>
                                <Run Text="{Binding Variedad}"/>
                                <LineBreak/>
                                <Run Text="Calibre: " FontWeight="Bold"/>
                                <Run Text="{Binding Calibre}"/>
                                <LineBreak/>
                                <Run Text="Embalaje: " FontWeight="Bold"/>
                                <Run Text="{Binding Embalaje}"/>
                                <LineBreak/>
                                <Run Text="N° de Cajas: " FontWeight="Bold"/>
                                <Run Text="{Binding NumeroDeCajas}"/>
                            </TextBlock>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Pallets del Viaje (Máximo 50)" Grid.Row="2" Margin="0,10">
                        <DataGrid x:Name="dgPallets" ItemsSource="{Binding PalletsEscaneados}" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Pallet" Binding="{Binding NumeroPallet}"/>
                                <DataGridTextColumn Header="Variedad" Binding="{Binding Variedad}"/>
                                <DataGridTextColumn Header="Calibre" Binding="{Binding Calibre}"/>
                                <DataGridTextColumn Header="Embalaje" Binding="{Binding Embalaje}"/>
                                <DataGridTextColumn Header="N° de Cajas" Binding="{Binding NumeroDeCajas}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <Button x:Name="btnFinalizar" Grid.Row="3" Content="Finalizar Despacho" HorizontalAlignment="Right" Margin="0,10,0,0" Command="{Binding ComandoFinalizarDespacho}"/>
                </Grid>
            </TabItem>

            <TabItem Header="Registro de Viajes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Fecha:"/>
                    <DatePicker x:Name="datePickerFecha" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <Label Grid.Row="1" Grid.Column="0" Content="N° Viaje:"/>
                    <TextBox x:Name="textBoxNumeroViaje" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <Label Grid.Row="2" Grid.Column="0" Content="Responsable:"/>
                    <TextBox x:Name="textBoxResponsable" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <Label Grid.Row="3" Grid.Column="0" Content="N° Guía:"/>
                    <TextBox x:Name="textBoxNumeroGuia" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <Label Grid.Row="4" Grid.Column="0" Content="Punto de partida:"/>
                    <TextBox x:Name="textBoxPuntoPartida" Grid.Row="4" Grid.Column="1" Margin="5"/>

                    <Label Grid.Row="5" Grid.Column="0" Content="Punto de llegada:"/>
                    <TextBox x:Name="textBoxPuntoLlegada" Grid.Row="5" Grid.Column="1" Margin="5"/>

                    <Label Grid.Row="6" Grid.Column="0" Content="Empresa de transporte:"/>
                    <ComboBox x:Name="comboBoxEmpresa"
                              Grid.Row="6" Grid.Column="1"
                              Margin="5"
                              SelectionChanged="ComboBoxEmpresa_SelectionChanged">
                    </ComboBox>

                    <Label Grid.Row="7" Grid.Column="0" Content="Conductor:"/>
                    <ComboBox x:Name="comboBoxConductor"
                              Grid.Row="7" Grid.Column="1"
                              Margin="5">
                    </ComboBox>

                    <Label Grid.Row="8" Grid.Column="0" Content="Placa:"/>
                    <ComboBox x:Name="comboBoxPlaca"
                              Grid.Row="8" Grid.Column="1"
                              Margin="5">
                    </ComboBox>

                    <Button x:Name="btnGuardarViaje"
                            Grid.Row="9" Grid.Column="1"
                            Content="Guardar Viaje"
                            Margin="5"
                            HorizontalAlignment="Right"
                            Click="btnGuardarViaje_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

        <Button x:Name="btnAbrirAdmin" Grid.Row="1" Content="Administrar Empresas/Vehículos/Conductores" HorizontalAlignment="Left" Margin="0,10,0,0" Click="btnAbrirAdmin_Click"/>
    </Grid>
</Window>