<!-- ImpresionDespachoWindow.xaml -->
<Window x:Class="AplicacionDespacho.ImpresionDespachoWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Imprimir Despacho" Height="700" Width="900"  
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="DESPACHO DE PRODUCTOS"   
                   FontSize="20" FontWeight="Bold"   
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Información del viaje -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0,0,0,20">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Fecha:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtFecha" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="N° Viaje:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="txtNumeroViaje" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="N° Guía:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtNumeroGuia" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Responsable:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="txtResponsable" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Empresa:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtEmpresa" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="Conductor:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="3" x:Name="txtConductor" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Placa:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtPlaca" Margin="0,0,20,0"/>

                <TextBlock Grid.Row="3" Grid.Column="2" Text="Destino:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="3" Grid.Column="3" x:Name="txtDestino" Margin="0,0,0,0"/>
            </Grid>
        </Border>

        <!-- Detalle de pallets -->
        <GroupBox Grid.Row="2" Header="Detalle de Pallets" Margin="0,0,0,20">
            <DataGrid x:Name="dgPallets"   
                      AutoGenerateColumns="False"   
                      IsReadOnly="True"  
                      GridLinesVisibility="All"  
                      HeadersVisibility="Column"  
                      FontSize="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Pallet" Binding="{Binding NumeroPallet}" Width="80"/>
                    <DataGridTextColumn Header="Variedad" Binding="{Binding Variedad}" Width="100"/>
                    <DataGridTextColumn Header="Calibre" Binding="{Binding Calibre}" Width="80"/>
                    <DataGridTextColumn Header="Embalaje" Binding="{Binding Embalaje}" Width="100"/>
                    <DataGridTextColumn Header="N° Cajas" Binding="{Binding NumeroDeCajas}" Width="70"/>
                    <DataGridTextColumn Header="Peso Unit. (kg)" Binding="{Binding PesoUnitario, StringFormat=F3}" Width="90"/>
                    <DataGridTextColumn Header="Peso Total (kg)" Binding="{Binding PesoTotal, StringFormat=F3}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Tabla resumen por variedad y embalaje -->
        <GroupBox Grid.Row="3" Header="RESUMEN POR VARIEDAD Y EMBALAJE" Margin="0,0,0,20">
            <DataGrid x:Name="dgResumen"   
                      AutoGenerateColumns="False"   
                      IsReadOnly="True"  
                      GridLinesVisibility="All"  
                      HeadersVisibility="Column"  
                      FontWeight="Bold">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Variedad - Embalaje" Binding="{Binding VariedadEmbalaje}" Width="300"/>
                    <DataGridTextColumn Header="Total Cajas" Binding="{Binding TotalCajas}" Width="150"/>
                    <DataGridTextColumn Header="Total Kilos" Binding="{Binding TotalKilos, StringFormat=F3}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Totales generales -->
        <Border Grid.Row="4" BorderBrush="Black" BorderThickness="2" Background="LightGray" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="TOTAL GENERAL - Cajas: " FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="txtTotalCajasGeneral" FontWeight="Bold" FontSize="14" Margin="0,0,30,0"/>
                <TextBlock Text="Kilos: " FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="txtTotalKilosGeneral" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Botones -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnImprimir" Content="Imprimir" Width="80" Height="30"   
                    Margin="0,0,10,0" Click="btnImprimir_Click"/>
            <Button x:Name="btnVistaPrevia" Content="Vista Previa" Width="100" Height="30"   
                    Margin="0,0,10,0" Click="btnVistaPrevia_Click"/>
            <Button x:Name="btnCerrar" Content="Cerrar" Width="80" Height="30"   
                    Click="btnCerrar_Click"/>
        </StackPanel>
    </Grid>
</Window>