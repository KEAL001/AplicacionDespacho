<Window x:Class="AplicacionDespacho.RegistroViajeWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Registro de Viaje" Height="500" Width="600"  
        WindowStartupLocation="CenterScreen"  
        ResizeMode="NoResize"  
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título dinámico -->
        <TextBlock x:Name="txtTitulo" Grid.Row="0" Text="Registro de Viaje"   
                   FontSize="18" FontWeight="Bold"   
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Formulario exacto del MainWindow -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Fecha:"/>
            <DatePicker x:Name="datePickerFecha" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="1" Grid.Column="0" Content="N° Viaje:"/>
            <TextBox x:Name="textBoxNumeroViaje" Grid.Row="1" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Responsable:"/>
            <TextBox x:Name="textBoxResponsable" Grid.Row="2" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="3" Grid.Column="0" Content="N° Guía:"/>
            <TextBox x:Name="textBoxNumeroGuia" Grid.Row="3" Grid.Column="1" Margin="5" />

            <Label Grid.Row="4" Grid.Column="0" Content="Punto de partida:"/>
            <TextBox x:Name="textBoxPuntoPartida" Grid.Row="4" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Punto de llegada:"/>
            <TextBox x:Name="textBoxPuntoLlegada" Grid.Row="5" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Empresa de transporte:"/>
            <ComboBox x:Name="comboBoxEmpresa" Grid.Row="6" Grid.Column="1" Margin="5"  
                      SelectionChanged="ComboBoxEmpresa_SelectionChanged"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Conductor:"/>
            <ComboBox x:Name="comboBoxConductor" Grid.Row="7" Grid.Column="1" Margin="5"/>

            <Label Grid.Row="8" Grid.Column="0" Content="Placa:"/>
            <ComboBox x:Name="comboBoxPlaca" Grid.Row="8" Grid.Column="1" Margin="5"/>
        </Grid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnGuardar" Content="Guardar y Activar" Width="130" Height="30"   
                    Margin="0,0,10,0" Click="btnGuardar_Click"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="80" Height="30"   
                    Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>